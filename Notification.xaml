<Window x:Class="VerusSententiaeFull.Notification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VerusSententiaeFull"
        mc:Ignorable="d"
        WindowState="Maximized"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        Title="Notification" Height="450" Width="800">

    <Border Background="#666666" Opacity="0.76" CornerRadius="10">
        <Grid>
            <TextBlock Name="MessageTextBlock" HorizontalAlignment="Center" VerticalAlignment="Center" Text="" FontSize="56" Foreground="White"/>
        </Grid>
    </Border>
</Window>
